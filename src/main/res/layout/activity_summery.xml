<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content" >


    <TextView
        android:text="Total Income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtIncome"

        android:layout_marginStart="127dp"
        android:layout_marginTop="137dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Balance: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtBalance"
        android:layout_alignBottom="@+id/txtIncome"
        android:layout_alignEnd="@+id/txtIncome"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="46dp" />

    <TextView
        android:hint="Total Expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtExpense"
        android:layout_below="@+id/txtIncome"
        android:layout_alignStart="@+id/txtIncome"
        android:layout_marginTop="49dp" />

    <TextView
        android:hint="Total: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTotal"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/txtBalance"
        android:layout_marginTop="42dp" />

</RelativeLayout>

