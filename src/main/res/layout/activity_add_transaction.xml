<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_transaction"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shirin.moneymoney_capstoneproject.AddTransaction">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Description"
        android:ems="10"
        android:id="@+id/editTextDesc"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/editTextAmount" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Amount"
        android:ems="10"
        android:id="@+id/editTextAmount"
        android:layout_above="@+id/editTextDesc"
        android:layout_alignStart="@+id/editTextType" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Type"
        android:ems="10"
        android:id="@+id/editTextType"
        android:layout_marginStart="28dp"
        android:layout_above="@+id/editTextAmount"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Add a Trasaction"
        android:textSize="36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="36dp"
        android:id="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Category"
        android:ems="10"
        android:id="@+id/editTextCatgoty"
        android:layout_below="@+id/editTextDesc"
        android:layout_alignStart="@+id/editTextDesc"
        android:layout_marginTop="14dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Date"
        android:ems="10"
        android:id="@+id/editTextDate"
        android:layout_below="@+id/editTextCatgoty"
        android:layout_alignStart="@+id/editTextCatgoty"
        android:layout_marginTop="25dp" />

    <Button
        android:text="Add Transaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAdd"
        android:layout_below="@+id/editTextDate"
        android:layout_alignParentStart="true" />

    <Button
        android:text="View Transaction Summery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonTran"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
